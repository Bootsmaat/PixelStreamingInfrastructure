{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "allowJs": true
    },
    "lib": ["ES6"],
    "include": ["./src/*.ts"],
    "exclude": ["./src/**/*.test.ts"],
    "typedocOptions": {
        "exclude": "src/index.*",
        "entryPoints": ["src/pixelstreamingfrontend.ts"],
        "sort": ["enum-value-ascending", "required-first", "source-order"],
        "out": "docs",
        "theme": "default",
        "hideGenerator": "true"
    }
}
